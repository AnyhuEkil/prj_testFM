* {
	margin: auto;
	padding: 0;
	font-family: "Comic Sans MS";
}

h2 {
	margin-left: 30px;
	line-height: 60px;
	color: blue;
}

h1 {
	text-align: center;
	font-size: 40px;
	color: blue;
}

h3 {
	margin-left: 30px;
	line-height: 60px;
}

p {
	margin-left: 70px;
	line-height: 60px;
}

div {
	display: inline-block;
}

#main_container {
	display: block;
	width: 1200px;
	height: 100vh;
	border: 3px solid black;
}

#item_picture {
	margin: 2%;
	width: 45%;
	height: 50%;
	float: left;
	background: url("javaFile/test1.png") no-repeat center;
	border: 1px dotted black;
}

#item_info {
	margin: 2%;
	width: 45%;
	height: 50%;
	float: left;
	border: 1px solid black;
	border-radius: 10px;
}

#countdown_info {
	margin: 2%;
	width: 45%;
	height: 15%;
	float: left;
}

#bidding_info {
	margin: 2%;
	width: 45%;
	height: 15%;
}

#seller_info {
	margin: 2%;
	width: 95%;
	height: 20%;
	line-height: 0;
	margin-left: 30px;
	border: 1px solid black;
	border-radius: 10px;
}

#showTime {
	text-align: center;
	font-size: 20px;
}

#current_bid {
	text-align: center;
}

#bid_detail {
	margin-left: 30px;
	line-height: 0;
}

